<!DOCTYPE html>
<html>

  <head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="/stylesheets/stickyfooter.css" rel="stylesheet"/>
    <link href="/stylesheets/style.css" rel="stylesheet">
  </head>

  <body>

    <%- include('header', {title: title}) %>

    <div class="container-fluid pt-5 pb-5">

      <div class="row">
        <div class="col-12">
          <h2>パーキング一覧</h1>
          <hr>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-lg-8">
          <table class="table table-bordered">
            <% for(var i in content) { %>
              <tr class="d-flex">
                <% var obj = content[i]; %>
                  <td class="col-8 col-sm-9 col-lg-10 d-flex align-items-center"><a href="/owners/show/<%= obj.id %>"><%= obj.name %></a></td>
                  <td class="col-4 col-sm-3 col-lg-2 d-flex justify-content-center"><a href="/owners/edit/<%= obj.id %>" class="btn btn-primary mt-1 mb-1">編集</a></td>
              </tr>
            <% } %>
          </table>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-12 col-sm-6 col-lg-4">
          <a href="/owners" class="btn btn-primary btn-block">作成</a>
        </div>
      </div>

    </div>

    <%- include('footer') %>

  </body>

</html>
